head
    title brewing

    link(href='http://fonts.googleapis.com/css?family=Josefin+Slab' rel='stylesheet' type='text/css')

    script(src="/bubbles.js")

body
    +main


template(name="main")
    //
    .bubbles
        .glass

    button.bubble-toggle(style="display:none") Sl√• av bobler

    .foam

    .brewer.row
        .col-xs-6
            .row
                if brewer
                    .pull-left.btn.btn-default(onclick="Session.set('user', undefined);", style="margin-right:20px") Logg ut
                    h4.pull-left.brewer-name #{brewer.name}, #{brewer.brewery}
        unless brewer
            .col-xs-6
                .btn.btn-default(onclick="nextPage('newbrewer');") Ny brygger
                .btn.btn-default(onclick="nextPage('login');") Eksisterende brygger

    .content
        .page.frontpage
            +frontpage
        .page.newbrew(style="display:none")
            +newbrew
        .page.newbrewer(style="display:none")
            +newbrewer
        .page.oldbrew(style="display:none")
            //+oldbrew
        .page.login(style="display:none")
            +login
        .page.viewbrew(style="display:none")
            +viewbrew
        .page.archivebrew(style="display:none")
            +archivebrew
        .page.evalbrew(style="display:none")
            +evalbrew









